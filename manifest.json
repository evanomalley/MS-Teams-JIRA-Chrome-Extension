{
    "name": "Post to Teams",
    "description": "Post updated JIRA items to MS Teams",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background.js"
    },
    "action":{
        "default_popup": "./popup.html"
    },
    "options_page": "./options.html",
    "permissions":[
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}